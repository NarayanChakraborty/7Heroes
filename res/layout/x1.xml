<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:background="#FF25C45D"
            android:gravity="center"
            android:text="বীরশ্রেষ্ঠ রুহুল আমিন"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold|normal" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFF7241A"
            android:src="@drawable/ruhulamin" />

        <TextView
            android:id="@+id/textView2"
            style="@style/code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="জন্ম      :জুন  ১৯৩৫                       
                             জন্মস্থান    :
                             গ্রাম-বাঘচাপাড়া,থানা-বেগমগঞ্জ,
                             জেলা-নোয়াখালী ।
                             আর্টিফিসার অফিসার হন : ১৯৬৫ সালে                                                     
                             কর্মস্থল     : নৌবাহিনী
                             পদবি      : আর্টিফিসার ইজ্ঞিনিয়ার
                             মুক্তিযুদ্ধের সেক্টর :           
                             প্রথমে ২নং এবং পরে ১০নং 
                             শহীদ    হন : ১০ ডিসেম্বর ১৯৭১  
                             বীরত্ব      :             
                        “মুক্তিযুদ্ধে নৌবাহিনীর পলাশ নামক জাহাজে 
                             আর্টিফিসার ইজ্ঞিনিয়ার হিসাবে দায়িত্ব পালনকালে 
                             হানাদার  বাহিনীর জঙ্গী বিমান হামলায়জাহাজের 
                             ইজ্ঞিনে আগুন লেগে পুড়ে  মারা যান ”        
                             সমাধিস্থল    :                 
                             রূপসা নদীর তীর,বাগমারা খুলনা ।    
                             "
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ra" />

    </LinearLayout>
    

</ScrollView>
